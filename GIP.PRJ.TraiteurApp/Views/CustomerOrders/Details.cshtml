@model GIP.PRJ.TraiteurApp.Models.Order

@{
    ViewData["Title"] = "Bestelling details";
}

<h1>Details</h1>

<div>
    <h4>Bestelling</h4>
    <hr />
    @if (ViewBag.IsLocked)
    {
        <div style="color:darkred">Bestelling kan niet meer worden aangepast (Tijd tot gereserveerd tijdslot is minder dan 1 uur)</div>
    }
    
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.OrderedOn)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.OrderedOn)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TimeSlot)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TimeSlot)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Customer)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Customer.Name)
        </dd>
    </dl>
</div>
<div>
    @if (!ViewBag.IsLocked)
    {
        <a asp-action="Edit" asp-route-id="@Model?.Id">Bewerken</a> @:|
    }
    
    <a asp-action="Index">Terug naar het overzicht</a>
</div>
