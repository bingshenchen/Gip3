@model GIP.PRJ.TraiteurApp.Models.Order

@{
    ViewData["Title"] = "Bestelling verwijderen";
}

<h1>Bestelling verwijderen</h1>

<p style="color:darkred">Niet mogelijk om deze bestelling te verwijderen (Tijd tot gereserveerd tijdslot minder dan 2 uur)</p>
<div>
    <h4>Bestelling</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.OrderedOn)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.OrderedOn)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TimeSlot)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TimeSlot)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Customer)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Customer.Id)
