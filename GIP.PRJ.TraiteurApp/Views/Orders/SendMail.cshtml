@{
    ViewData["Title"] = "Bestelling email";
}

<h1>Email</h1>

<div>
    <h4>Bestelling</h4>
    <hr />
    <div style="color:green">@ViewBag.InfoMessage</div>
    <div style="color:red">@ViewBag.ErrorMessage</div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Customer)
        </dt>
